
link(rel="stylesheet", href="css/style.css")
nav.navbar
  .logo
    a(href='/posts') Blog
  a.toggle-button(href='#')
    span.bar
    span.bar
    span.bar
  .navbar-links
    ul
      li
        a(href='/posts/add-form') Add Post
.wrapper
  .top  
  .content
if posts.length
  each eachPost in posts
      .card
        h1 #{eachPost.titre}
        h5 Auteur #{eachPost.auteur}
        p.article-name Date: #{eachPost.createdAt}
        h5 #{eachPost.resume}
        p.text
          | #{eachPost.content}
        a(href=`/posts/post/${eachPost.id}`) Read More
        a.edit-button(href=`/posts/edit-form/${eachPost.id}`) Edit
        a.remove-button(href=`/posts/delete/${eachPost.id}`) Remove
else
    h1 No Post Found. Add a Post